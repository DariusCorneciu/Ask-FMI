@model Project_DAW.Models.SubCategorie

@if (TempData.ContainsKey("message"))
{
    <h1>@ViewBag.message</h1>
}

<br />

<div class="align-items-center justify-content-center d-flex">
    <a class="btn btn-success" href="/SubCategorii/New">Adauga o noua subcategorie</a>
</div>

<br />

@foreach (var categorie in ViewBag.Categorii)
{
    @Html.Label("Name", "Nume categorie")
    <p>@categorie.Name</p>
    <a class="btn alert-success" href="/SubCategorii/Show/@categorie.Id">Afisare SubCategorie</a>
    <a class="btn alert-success" href="/SubCategorii/Edit/@categorie.Id">Editare SubCategorie</a>
    <br />
    <hr />
    <br />
}
<br />