@model Project_DAW.Models.Intrebare
<h2 class="text-center mt-5">Adaugare intrebare</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Intrebari",
            method: FormMethod.Post))
            {

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.Label("Name", "Titlu intrebare")
                <br />
                @Html.TextBox("Name", null, new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("Continut", "Continut intrebare")
                <br />
                @Html.TextArea("Continut", null, new { @class = "form-control" })

                @Html.ValidationMessage("Continut", null, new { @class = "text-danger" })
                <br />

                <br />
                @if (Model.SubCategorieId == null)
                {
                    <label>Selectati categoria</label>
                    @Html.DropDownListFor(m => m.SubCategorieId, new SelectList(Model.SubCateg, "Value", "Text"),
            "Selectati categoria", new { @class = "form-control" })

                    @Html.ValidationMessageFor(m => m.SubCategorieId, null, new { @class = "text-danger" })
                    <br />
                }
               
                <br />

                <button class="btn btn-success" type="submit">Adauga intrebare</button>

            }

        </div>
    </div>
</div>
